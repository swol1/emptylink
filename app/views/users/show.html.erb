<div class="row">
  <div class="col-md-12">
    <small class="text-muted">User <%= "##{@user.id}" %>, since
      <nobr><%= l(@user.updated_at, format: :short) %></nobr>
    </small>
    <h1 class="display-4-resp hide-overflow"><%= truncate(@user.email, length: 37) %>
    </h1>
    <%= link_to 'Edit profile', edit_user_registration_path, class: 'btn btn-primary btn-sm' %>
    <br>
  </div>

  <div class="col-md-12">
    <hr class="mt-4 mb-4"/>
    <h4>Recent links (total: <%= @total_links_count %>)</h4>

    <%= render 'partials/links_table', links: @recent_links %>
  </div>
</div>

